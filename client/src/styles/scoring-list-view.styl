.y-scoring-list-view
  dock()

  .y-no-scorings
    dock()

  .y-scorings
    dock()
    overflow auto

  .y-scoring
    padding 10px
    border-left 3px solid transparent
    border-bottom 1px solid #ddd
    &:hover
      background #f5f5f5
    &.y-active
      background #eee
      border-left-color y-color-yellow-dk
      border-left-color y-color-grey-md
  .y-scoring-details
    cursor pointer
    margin-left 25px 
  input[type='checkbox']
    position relative
    float left
    top 18px
  .y-scoring-title
    font-size 18px
    font-weight 300
  .y-scoring-caption
    font-size 11px
    text-transform uppercase
    color #888
    overflow ellipsis
  .y-scoring-cutline
    font-size 12px
    color #888
    overflow ellipsis

