.y-main
  dock()

.y-navigation-bar
  dock-top(y-navigation-bar-height)
  background-color y-color-yellow

.y-toggle-help-button
  float right
  background none
  border none
  padding 0
  width: 32px
  font-size 16px
  color y-color-grey-md
  &:hover
    color black

.y-logo-area
  dock-left(y-topic-lane-width)
  background-color y-color-yellow-dk
  text-align center

.y-navigation-area
  dock(left:y-topic-lane-width)
  line-height y-navigation-bar-height

.y-desktop
  dock(top:y-navigation-bar-height, bottom:y-status-bar-height)

.y-lane-header
  dock-top(y-desktop-header-height)
  border-bottom 1px solid #ddd

.y-lane-body
  dock(top:y-desktop-header-height)

.y-topic-lane
  dock-left(y-topic-lane-width)
  border-right 1px solid #ddd

.y-workspace-lane
  dock(left:y-topic-lane-width, right:y-help-lane-width)

.y-page-views, .y-modal-views
  dock()
  padding 25px 30px
  overflow auto

.y-modal-views
  background white

.y-selection-views
  margin 7px 25px
  .y-caption
    display inline-block
    height 30px
    line-height 30px
    text-transform uppercase
    font-size 11px
  .y-tooltip
    display inline-block
    margin-left: 5px
  .btn
    height 30px

.y-help-lane
  dock-right(y-help-lane-width)
  border-left 1px solid #ddd
  .y-lane-body
    overflow auto

.y-topic-button
  dock-left(48px, 6px, 6px, 6px)

.y-topic-title
  text-block(y-desktop-header-height, 6px + 48px + 6px, 6px + 48px + 6px)
  font-size 18px
  font-weight 300
  text-align center

.y-upload-button
  dock-right(48px, 6px, 6px, 6px)


.y-help-home-button
  dock-left(48px, 6px, 6px, 6px)

.y-help-title
  text-block(y-desktop-header-height, 4 * 6px +  2 * 48px, 6px + 48px + 6px)
  font-size 18px
  font-weight 300
  text-align center

.y-help-back-button
  dock-right(48px, 6px, 2 * 6px + 48px, 6px)

.y-help-forward-button
  dock-right(48px, 6px, 6px, 6px)

.y-help
  padding 10px
  font-size 90%
  h1
    margin-top 20px
    font-size 90%
    text-transform uppercase
    border-bottom 1px solid #ddd
  ul
    padding 0
  li
    list-style-type none
    color y-color-hyperlink
    cursor pointer

.y-status-bar
  dock-bottom(y-status-bar-height)
  border-top 1px solid #ddd


// Adding a .y-main-no-topic class on .y-main hides the help area
//    and docks .y-workspace-lane to the left
.y-main-no-topic
  .y-topic-lane
    display none
  .y-workspace-lane
    left 0

// Adding a .y-main-no-help class on .y-main hides the help area
//    and docks .y-workspace-lane to the right
.y-main-no-help
  .y-help-lane
    display none
  .y-workspace-lane
    right 0
    
