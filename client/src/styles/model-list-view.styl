.y-model-list-view
  dock()
  .y-model
    cursor pointer
    padding 10px
    border-left 3px solid transparent
    border-bottom 1px solid #ddd
    &:hover
      background #f5f5f5
    &.y-active
      background #eee
      border-left-color y-color-yellow-dk
      border-left-color y-color-grey-md
  .y-model-title
    font-size 18px
    font-weight 300
  .y-model-caption
    font-size 11px
    text-transform uppercase
    color #888
    overflow ellipsis
  .y-model-cutline
    font-size 12px
    color #888
    overflow ellipsis
