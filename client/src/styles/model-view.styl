.y-model-view
  dock()
  padding 0 35px

  .y-tag
    font-size 11px
    text-transform uppercase
    display inline-block
    background y-color-yellow
    padding 3px 5px

  .y-title
    font-size 36px
    font-weight 300

  .y-tagline
    color #888
    margin 10px 0
    font-size 12px
    float right

  .y-subtitle
    font-size 22px
    font-weight 300
    margin-top 35px

  .y-summary
    background #f5f5f5
    padding 5px 0

  .y-summary-item
    display inline-block
    padding 10px

  .y-summary-key
    text-transform uppercase
    font-size 11px
    color #888
