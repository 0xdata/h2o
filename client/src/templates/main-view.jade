// ko with:view
.y-main(data-bind="css:{'y-main-no-inspector':isInspectorHidden}")
  .y-navigation-bar
    .y-logo-area
      img(src='img/h2o.png' width='12%' style='position:relative; top:10px')
    .y-navigation-area
      button.y-toggle-inspector-button(data-bind='click:toggleInspector' title='Toggle inspector pane')
        i.fa.fa-columns
  .y-desktop
    .y-workspace
      .y-topic-lane
        .y-lane-header
          button.y-topic-button.btn.fa-btn(data-bind='click:toggleTopics')
            i.fa.fa-bars
          .y-topic-title(data-bind='text:topicTitle')
          button.y-upload-button.btn.fa-btn
            i.fa.fa-refresh

        // ko if:isNavigatorMasked
        .y-mask
        // /ko

        .y-lane-body(data-bind="template:{name:template, foreach:listViews}")

        // ko if:isListMasked
        .y-mask
        // /ko

      .y-view-lane
        .y-lane-header
          .y-selection-views(data-bind="template:{name:template, foreach:selectionViews}")
        .y-lane-body
          .y-page-views(data-bind="template:{name:template, foreach:pageViews}")
          // ko if:hasModalView
          .y-modal-views(data-bind="template:{name:template, foreach:modalViews}")
          // /ko

        // ko if:isViewMasked
        .y-mask
        // /ko

      .y-modal-dialogs-container(data-bind="visible:hasModalDialog")
        .y-modal-dialogs(data-bind="template:{name:template, foreach:modalDialogs, afterAdd:fixDialogPlacement}")
          
    .y-inspector-lane
      .y-lane-header
        button.y-inspector-home-button.btn.fa-btn(data-bind='click:navigateHome')
          i.fa.fa-home
        .y-inspector-title Inspector
        button.y-inspector-back-button.btn.fa-btn(data-bind='click:navigateBack, enable:canNavigateBack')
          i.fa.fa-arrow-left
        button.y-inspector-forward-button.btn.fa-btn(data-bind='click:navigateForward, enable:canNavigateForward')
          i.fa.fa-arrow-right

      .y-lane-body
        .y-inspector(data-bind="geyser:inspection")


  .y-status-bar(data-bind='text:status')
// /ko
